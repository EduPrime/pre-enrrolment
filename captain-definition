  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:18 AS builder",  
    "WORKDIR /app",
    "COPY package*.json ./", 
    "RUN npm install --legacy-peer-deps",  
    "COPY . .",  
    "RUN npx prisma generate",
    "RUN npm run build",  
    "FROM nginx:alpine",  
    "COPY --from=builder /app/dist /usr/share/nginx/html"
  ] 
